pipeline {
 tools {
    maven 'Maven 3.6.1'
  }
  agent any
  stages {
  
    stage('Build') {
      post {
        success {
          archiveArtifacts 'target/*.war'

        }
      }
      steps {
        sh 'mvn clean install'        
      }
    }
    stage('Test') {
      parallel {
        stage('Test') {
          post {
            always {
              junit '**/surefire-reports/*.xml'
            }

          }
          steps {
            sh 'mvn test'
          }
        }
        stage('SonarQube Analysis') {
          steps {
            sh '''mvn sonar:sonar \\
-Dsonar.host.url=http://10.0.0.113:8082 \\
-Dsonar.login=55d4924f14df92d208e26fbf47c05de918e3a044'''
          }
        }
      }
    }
    stage('Deploy') {
      steps {
        sh 'docker build -t sop .'
        sh 'docker-compose up -d'
      }
    }
  }
}
