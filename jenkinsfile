pipeline {
environment{DOCKER_HOST = 'tcp://127.0.0.1:2375'}
 tools {
    maven 'Maven 3.6.1'
  }
  agent any
  stages {
      stage('Build') {
      post {
        success {
          archiveArtifacts 'target/*.war'

        }
      }
      steps {
        bat 'mvn clean install'
      }
    }
    stage('Test') {
      parallel {
        stage('Test') {
          post {
            always {
              junit '**/surefire-reports/*.xml'
            }

          }
          steps('maven Test') {
            bat 'mvn test'
          }
        }
        stage('SonarQube Analysis') {
          steps {
            bat '''mvn sonar:sonar \\
-Dsonar.host.url=http://10.0.0.113:8082 \\
-Dsonar.login=861e199a38375e07909bf31ebdd160885c76bc08'''
          }
        }
      }
    }
    stage('Deploy') {
      steps {
        bat 'docker build -t sop .'
        bat 'docker-compose up -d'
      }
    }
  }
}
